<apex:page standardController="Opportunity" recordSetVar="opportunities" tabStyle="Opportunity" sidebar="false" extensions="FilterOppListCls">
    <apex:form >
        <apex:pageBlock >
            <apex:pageMessages />
            <apex:inputText value="{!keyword}"/>
            <apex:commandButton value="Search" action="{!serach_now}"/>
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!save}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockTable value="{!results}" var="r">
                <apex:column value="{!r.name}"/>
                <apex:column headerValue="Stage">
                    <apex:inputField value="{!r.stageName}"/>
                </apex:column>
                <apex:column headerValue="Close Date">
                    <apex:inputField value="{!r.closeDate}"/>
                </apex:column>
            </apex:pageBlockTable>      
        </apex:pageBlock>
    </apex:form>
</apex:page>